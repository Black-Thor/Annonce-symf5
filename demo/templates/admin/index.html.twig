{% extends "base.html.twig" %}

{% block title 'Admin' %}

{% block body %}
    <div class = "container mt-4">
        <h1 class="text-center"> Admin </h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th> Titre </th>
                <th> Description </th>
                <th> Action </th>
            </tr>
            </thead>
            <tbody>
            {% for annonces in annonces %}
            <tr>
                <td> {{ annonces.title }}</td>-
                <td>
                    {{ annonces.description }}
                </td>
                <td>
                    <a href="{{path('admin.annonces.edit' , {id:annonces.id}) }}" class="btn btn-primary"> Editer </a>
                    <a href="{{path('admin.annonces.delete' , {id:annonces.id}) }}" class="btn btn-danger"> Supprimer</a>


                </td>

            </tr>
            {% endfor %}
            </tbody>
        </table>
        
        <div class="text-end">
            <a href="{{ path('admin.new') }}" class="btn btn-primary"> Nouvelle annonces</a>
        </div>
    </div>
{% endblock %}