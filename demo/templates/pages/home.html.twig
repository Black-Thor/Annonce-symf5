{% extends "base.html.twig" %}

{% block title 'acceuille' %}
{% block body %}
 <div class = "container text-center"> 
    <h1> Bienvenue sur la page d'acceuil </h1>
 </div>

 <div class = "container text-center ">
    <h2> Dernieres Annonces </h2>
    <div class= "row flex"> 
      {% for annonces in annonces %}
      <div class= "col-3" >
         <div class="card"> 
            <div class="card-body">
               <h5 class ="card-title"> 
                 <a href="{{ path('annonces.show', {id: annonces.id , slug : annonces.slug })}}"> {{annonces.title}}  </a>
               </h5>
               <p class="card-text"> {{annonces.description}} ({{annonces.codePostal}})</p>
               <div class = "text-danger" style="font-weight: bold ; font-size:2rem ; "> {{annonces.telephone}} </div>
            <div>
         <div>
      <div>
      {% endfor %}
    </div>
  </div>
{% endblock %}